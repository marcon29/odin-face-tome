<section class="comment-form">
    <%= form_with model: comment do |f| %>
        <%= f.hidden_field :post_id, value: post.id %>
        <%=  pass_previous_referrer(f, "edit") %>

        <div class="comment-form-group <%= 'flex-container' if action_name != 'edit' %>">
            <div class="comment-form-header">
                <% if action_name != "edit" %>
                    <%= image_tag current_user.get_profile_image, alt: current_user.hyphenate(current_user.full_name), class: "small-profile-image", style: image_positioning_styles(current_user) %>
                <% else %>
                    <h2 class="short-top-bottom-margins"><%= get_form_text(f, :header) %></h2>
                <% end %>
            </div>

            <div class="comment-form-input form-field-group">
                <%= f.text_area :content, placeholder: get_form_text(f, :content, :placeholder) %>
            </div>

            <div class="comment-form-footer form-action-button">
                <%= f.submit get_form_text(f, :submit) %>
            </div>
        </div>
    <% end %>
</section>

