<section id="form-flex-container">
  <section id="col-form">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages_by_input", resource: resource, emsg: emsg = {} %>

      <div class="field-label-pair">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <%= (tag.p emsg[:email].first, class: "field-error-message") if emsg && emsg[:email] %>

      <div class="actions">
        <%= f.submit "Reset Password" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </section>

  <section id="col-about">
    <%= render "./static/main_site_description" %>
  </section>
</section>
  