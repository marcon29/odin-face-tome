<!DOCTYPE html>
<html>
  <head>
    <title>OdinFaceTome</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "layouts/site_header" %>

    <main>
      <section id="main-notifications-area">
        <%= render "layouts/flash_messages" %>
      </section>

      <section id="main-content-area">
        <% if user_signed_in? %>
          <%= render "layouts/site_sidebar_left", user: @user, image_size: "medium" %>
        <% end %>
        
        <section id="main-content">
          <%= yield %>
        </section>      
        
        <% if user_signed_in? %>
          <%= render "layouts/site_sidebar_right" %>
        <% end %>
      <div>
    </main>

    <%= render "layouts/site_footer" %>    
  </body>
</html>
