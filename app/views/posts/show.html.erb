<article class="post-group">
    <section class="post">
        <div class="post-header">
            <%= render "users/user_profile_info", user: @post.user, location: "main", post: @post %>
        </div>
        <div class="post-content">
            <p>Post Content</p>
        </div>
        <div class="post-footer">
            <p>XXXX People Liked This | Like</p>
            <p>XXXX Comments</p>
        </div>
    </section>
    <section class="post-comments-group">
        <section class="comment-form-group">
            <div class="comment-header">
                <%= render "users/user_profile_info", user: @post.user, location: "main", post: @post %>
            </div>
            <div class="comment-form-input">
                <input type="text", class="comment-input", value="Add Your Comment">
            </div>
            <div class="comment-footer"
                <div class="comment-form-action"
                    <%= button_to "Comment", "#", method: :get %></p>
                </div>
            </div>
        </section>
        <section class="post-comments">
            <div class="comment">
                <p>First comment</p>
            </div>
            <div class="comment">
                <p>Second comment</p>
            </div>
            <div class="comment">
                <p>Third comment</p>
            </div>
            <div class="comment">
                <p>Fourth comment</p>
            </div>
            <div class="comment">
                <p>Fifth comment</p>
            </div>
            <div class="comment">
                <p>Sixth comment</p>
            </div>
        </section>
    </section>
</article>
