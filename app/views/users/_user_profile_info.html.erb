<section class="profile-display profile-<%= location %>">
    <div class="profile-img">
        <%= image_tag user.get_profile_image, alt: user.hyphenate(user.full_name), class: profile_image_classes(location), style: image_positioning_styles(user) %>
    </div>

    <div class="profile-info">
        <% if location == "header" %>
            <h1 class="profile-header-user-name"><%= user.full_name %></h1>

            <% if action_name == "show" %>
                <div class="profile-header-user-info">
                    <% get_profile_header_user_info(user) %>
                </div>
                <% if user != current_user && !current_user.rejected?(user) %>
                    <div class="profile-friend-request">
                        <%= render "friends/friend_request_button", user: user %>
                    </div>
                <% end %>
            <% elsif controller_name == "registrations" %>
                <h2>Your Profile</h2>
                <%= button_to "Change Profile Image", edit_profile_image_user_path(current_user), method: :get %>
            <% else %>
                <h2>Profile Image Manager</h2>
                <% get_image_mgr_current_display %>
            <% end %>
        <% else %>
            <p class="short-top-bottom-margins"><%= link_to user.full_name, user_path(user) %></p>
        <% end %>
    </div>

    <% if location == "main" || location == "post" || location == "comment" %>
        <% if location == "post" || location == "comment" %>
            <div class="profile-username">
                <p class="short-top-bottom-margins"><%= "@#{user.username}" %></p>
            </div>
            <div class="<%= location %>-time">
                <p class="short-top-bottom-margins"><%= "#{Time.now.hour - post.created_at.hour} hours ago" %></p>
            </div>
            <% if location == "comment" %>
                <div class="<%= location %>-edit-button">
                    <%= button_to "Edit", edit_comment_path(comment), method: :get, class: "small-button" %>
                </div>
                <div class="<%= location %>-delete-button">
                    <%= button_to "Delete", comment_path(comment), data: { confirm: "Are you sure?" }, method: :delete, class: "small-button"  %>
                </div>
            <% end %>
        <% else %>
            <div class="profile-friend-request">
                <%= render "friends/friend_request_button", user: user %>
            </div>
        <% end %>
    <% end %>
</section>

