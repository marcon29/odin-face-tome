<section class="page-header">
    <%= render "users/user_profile_info", user: @user, location: "header" %>
    
    <% if @user != current_user %>
        <div class="friend-options">
            <%= render "friends/friend_request_button", user: @user %>
        </div>
    <% end %>
</section>

<section class="page-content" id="user-posts">
    <% if @user == current_user %>
        <%= render "posts/post_form", post: current_user.posts.build %>
        <h3>My Posts</h3>
    <% else %>
        <h3><%= @user.first_name %>'s Posts</h3>
    <% end %>

    <%= render "posts/post_feed", posts: @posts %>
</section>
 

